@inherits LayoutComponentBase
@inject IAddendumService Addendum
<div class="w-full h-full max-w-full flex font-poppins">
    @* SIDEBAR *@
    <div class="w-1/4 max-w-[300px] flex-col gap-6 bg-black h-full text-white overflow-scroll">
        <div class="text-center p-6 mt-3">
            <h2 class="text-3xl font-playwrite">addendum</h2>
        </div>

        <div class="p-3">
            @foreach (var category in Addendum.GetCategories())
            {
                <div class="mb-3">
                    <div class="p-3 text-gray-400 font-bold">
                        @category.Name
                    </div>
                    @foreach (var component in category.Components.OrderBy(m => m.Name))
                    {
                        <div class="px-3 py-1">
                            <a class="cursor-pointer hover:underline hover:text-indigo-400" href="/docs/@category.Name/@component.Name">
                                @component.Name
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="flex-col flex-grow">
        <div class="bg-gray-200 border-b border-gray-300 shadow-sm p-3 flex items-center justify-end">
